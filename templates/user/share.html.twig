{% extends "base.html.twig" %}

{% block body %}
{% include "user/nav.html.twig" %}
    {{form_start(searchForm)}}
        {{form_widget(searchForm)}}
    {{form_end(searchForm)}}

    <div class="mt-3 text-center" style="background-color: rgb(46, 139, 87); color: white">
        {% if shares is empty%}
            <h5>Il semble que vous n'avez pas aimer d'article</h5>

            {% else %}
                {% for share in shares %}
                    <img src="{{asset(share.article.image)}}" class="img-fluid">
                    <p>{{share.article.title}}</p>
                    <p>{{share.article.category}}</p>
                    <p>{{share.article.contents}}</p>
                    <p>{{share.user.lastname}} {{share.user.firstname}}</p>
                    <hr>
                {% endfor %}
        {% endif %}
    </div>

    <br>

    <div class="navigation">
        {{knp_pagination_render(shares, null, {}, {

            'align': 'center',
            'size': 'medium',
            'rounded' : 'false'
        })}}
    </div>
{% endblock %}