<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Le Blog d'Arthur{% endblock %}</title>

        {% block head_css %}
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
        {% endblock %}
        {% block stylesheets %}
            <link rel="stylesheet" href="Css/footer.css">
            <link rel="stylesheet" href="Css/form.css">
            <link rel="stylesheet" href"Css/user/home.css">
        {% endblock %}

        {% block head_js %}
            <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.min.js" integrity="sha384-+YQ4JLhjyBLPDQt//I+STsc9iw4uQqACwlvpslubQzn4u2UU2UFM80nGisd026JF" crossorigin="anonymous"></script>
        {% endblock %}
        {% block javascripts %}{% endblock %}
    </head>
    <body>

        {% block body %}
            <nav class="navbar navbar-expand-lg navbar-light" style="background-color: aquamarine">
                <a class="navbar-brand" href="#">Le blog de Arthur :)</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                         <li class="nav-item active">
                            <a class="nav-link" href="/">Accueille <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link" href="{{ path('about') }}">A propos</a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link" href="{{ path('contact') }}">Contact</a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link" href="{{ path('create') }}">Créer un compte</a>
                        </li>
                        {% if app.user and is_granted('ROLE_ADMIN') %}
                            <li class="nav-item active">
                                <a class="nav-link" href="{{ path('admin_index')}}">Voir votre profil {{app.user.pseudo}} <span class="sr-only">(current)</span></a>
                            </li>
                        {% elseif app.user %}
                            <li class="nav-item active">
                                <a class="nav-link" href="{{ path('user_index')}}">Voir votre profil {{app.user.pseudo}} <span class="sr-only">(current)</span></a>
                            </li>  
                        {% endif %}
                        {% if app.user %}
                            <li class="nav-item active">
                                <a class="nav-link" href="{{ path('app_logout') }}">{{app.user.lastname}} {{app.user.firstname}} Se déconnecter</a>
                            </li>
                        {% else %}
                            <li class="nav-item active">
                                <a class="nav-link" href="{{ path('app_login') }}">Se connecter</a>
                            </li>
                        {% endif %}
                        
                    </ul>
                </div>
            </nav>
        {% endblock %}
    </body>
</html>
        