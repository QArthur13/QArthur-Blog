{% include "base.html.twig" %}

{% block body %}
    {% include "admin/nav.html.twig" %}

        {{form_start(searchForm)}}
            {{form_widget(searchForm)}}
        {{form_end(searchForm)}}

        <div class="mt-3 text-center" style="background-color: rgb(46, 139, 87); color: white">
            {% for comment in comments %}
                <h3>{{comment.user.lastname}} {{comment.user.firstname}} {{comment.user.pseudo}}</h3>
                <h3>{{comment.user.email}}</h3>
                <h4>{{comment.article.title}}</h4>
                <p>{{comment.message}}</p>
                {% if comment.approve == true %}
                    <p><em>Votre commentaire à été approuvé</em></p>
                    <p>{{comment.approve}}</p>
                {% elseif comment.approve == null %}
                    <p><em>Votre commentaire n'a pas été encore approuvé</em></p>
                {% else %}
                    <p><em>Votre commentaire n'a pas été approuvé et ne sera pas publié</em></p>
                    <p>{{comment.approve}}</p>
                {% endif %}
                <a href="{{ path('article', {'id': comment.article.id}) }}">Voir l'article</a>
                <hr>
            {% endfor %}
        </div>
{% endblock %}

