{% include "base.html.twig" %}

{% block body %}
<body style="background-color: rgb(60, 179, 113); color: white">
    {% include "admin/nav.html.twig" %}
        <div class="mt-3 text-center" style="background-color: rgb(46, 139, 87); color: white">
            {% for list in lists %}
                <h3>{{list.user.lastname}} {{list.user.firstname}} {{list.user.pseudo}}</h3>
                <h3>{{list.user.email}}</h3>
                <h4>{{list.article.title}}</h4>
                <p>{{list.message}}</p>
                <a href="{{ path('article', {'id': list.article.id}) }}">Voir l'article</a>
            {% endfor %}
        </div>
</body>
{% endblock %}